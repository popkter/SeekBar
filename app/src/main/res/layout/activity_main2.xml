<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <com.pop.seekbar.PopSeekBar
        android:id="@+id/seekbarTop"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        app:commonRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:overStretchEnable="true"
        app:progressSolidColor="@color/black"
        app:trackSolidColor="#FF5722" />

    <TextView
        android:id="@+id/progressTv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/seekbarTop"
        app:layout_constraintEnd_toEndOf="@id/seekbarTop"
        app:layout_constraintTop_toTopOf="@id/seekbarTop" />

    <Button
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blue"
        app:layout_constraintEnd_toStartOf="@id/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekbarTop" />

    <Button
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="red"
        app:layout_constraintEnd_toStartOf="@id/green"
        app:layout_constraintStart_toEndOf="@id/blue"
        app:layout_constraintTop_toBottomOf="@id/seekbarTop" />

    <Button
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/red"
        app:layout_constraintTop_toBottomOf="@id/seekbarTop" />

    <com.pop.seekbar.PopSeekBar
        android:id="@+id/seekbarBottom"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingTop="60dp"
        android:paddingBottom="30dp"
        app:commonRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:naturalProcess="true"
        app:progressBorder="-5dp"
        app:progressEndSolidColor="@android:color/holo_red_dark"
        app:progressGradientAngle="0"
        app:progressSolidColor="@color/black"
        app:progressStartSolidColor="#FF5722"
        app:trackSolidColor="#CCFFFFFF" />

    <ImageView
        android:id="@+id/muteIv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_navigation_media_selector"
        app:layout_constraintBottom_toBottomOf="@id/seekbarBottom"
        app:layout_constraintEnd_toEndOf="@id/seekbarBottom"
        app:layout_constraintStart_toStartOf="@id/seekbarBottom" />

    <TextView
        android:id="@+id/progressTv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/seekbarBottom"
        app:layout_constraintStart_toStartOf="@id/seekbarBottom"
        app:layout_constraintTop_toTopOf="@id/seekbarBottom" />


</androidx.constraintlayout.widget.ConstraintLayout>